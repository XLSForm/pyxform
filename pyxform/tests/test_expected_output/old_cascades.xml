<?xml version="1.0"?>
<h:html xmlns="http://www.w3.org/2002/xforms" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:h="http://www.w3.org/1999/xhtml" xmlns:jr="http://openrosa.org/javarosa" xmlns:odk="http://www.opendatakit.org/xforms" xmlns:orx="http://openrosa.org/xforms" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <h:head>
    <h:title>old_cascades</h:title>
    <model odk:xforms-version="1.0.0">
      <instance>
        <old_cascades id="old_cascades">
          <state_states/>
          <state_counties/>
          <state/>
          <meta>
            <instanceID/>
          </meta>
        </old_cascades>
      </instance>
      <instance id="states">
        <root>
          <item>
            <name>texas</name>
            <label>texas</label>
          </item>
          <item>
            <name>washington</name>
            <label>washington</label>
          </item>
        </root>
      </instance>
      <instance id="cities">
        <root>
          <item>
            <states>texas</states>
            <name>dumont</name>
            <counties>king</counties>
            <label>dumont</label>
          </item>
          <item>
            <states>texas</states>
            <name>finney</name>
            <counties>king</counties>
            <label>finney</label>
          </item>
          <item>
            <states>texas</states>
            <name>brownsville</name>
            <counties>cameron</counties>
            <label>brownsville</label>
          </item>
          <item>
            <states>texas</states>
            <name>harlingen</name>
            <counties>cameron</counties>
            <label>harlingen</label>
          </item>
          <item>
            <states>washington</states>
            <name>seattle</name>
            <counties>king</counties>
            <label>seattle</label>
          </item>
          <item>
            <states>washington</states>
            <name>redmond</name>
            <counties>king</counties>
            <label>redmond</label>
          </item>
          <item>
            <states>washington</states>
            <name>tacoma</name>
            <counties>pierce</counties>
            <label>tacoma</label>
          </item>
          <item>
            <states>washington</states>
            <name>puyallup</name>
            <counties>pierce</counties>
            <label>puyallup</label>
          </item>
        </root>
      </instance>
      <instance id="counties">
        <root>
          <item>
            <states>texas</states>
            <name>king</name>
            <label>king</label>
          </item>
          <item>
            <states>texas</states>
            <name>cameron</name>
            <label>cameron</label>
          </item>
          <item>
            <states>washington</states>
            <name>king</name>
            <label>king</label>
          </item>
          <item>
            <states>washington</states>
            <name>pierce</name>
            <label>pierce</label>
          </item>
        </root>
      </instance>
      <bind nodeset="/old_cascades/state_states" type="string"/>
      <bind nodeset="/old_cascades/state_counties" type="string"/>
      <bind nodeset="/old_cascades/state" type="string"/>
      <bind jr:preload="uid" nodeset="/old_cascades/meta/instanceID" readonly="true()" type="string"/>
    </model>
  </h:head>
  <h:body>
    <select1 ref="/old_cascades/state_states">
      <label>State:</label>
      <itemset nodeset="instance('states')/root/item">
        <value ref="name"/>
        <label ref="label"/>
      </itemset>
    </select1>
    <select1 ref="/old_cascades/state_counties">
      <label>County:</label>
      <itemset nodeset="instance('counties')/root/item[states= /old_cascades/state_states ]">
        <value ref="name"/>
        <label ref="label"/>
      </itemset>
    </select1>
    <select1 ref="/old_cascades/state">
      <label>City:</label>
      <itemset nodeset="instance('cities')/root/item[states= /old_cascades/state_states  and counties= /old_cascades/state_counties ]">
        <value ref="name"/>
        <label ref="label"/>
      </itemset>
    </select1>
  </h:body>
</h:html>
